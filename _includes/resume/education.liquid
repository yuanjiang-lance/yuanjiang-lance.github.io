<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign education = data[1] | sort: 'startDate' | reverse %}
  {% for content in education %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if content.startDate and content.startDate != '' %}
            {% assign startDate = content.startDate | split: '-' | slice: 0, 2 | join: '.' %}
            {% assign endDate = content.endDate | split: '-' | slice: 0, 2 | join: '.' | default: 'Present' %}
            {% assign date = startDate | append: ' - ' %}
            {% assign date = date | append: endDate %}
          {% else %}
            {% assign date = null %}
          {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  {% if date %}
                    <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px"> {{ date }} </span>
                  {% endif %}
                </td>
              </tr>
              {% if content.location %}
                <tr>
                  <td>
                    <p class="location">
                      <i class="fa-solid fa-location-dot iconlocation"></i>
                      {{ content.location }}
                    </p>
                  </td>
                </tr>
              {% endif %}
            </tbody>
          </table>
        </div>

        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <div class="row">
            <div class="col-10">
              <h6 class="title font-weight-bold ml-1 ml-md-4">
                {{ content.studyType }}{% if content.institution %}, {{ content.institution }}{% endif %}
              </h6>

              <h6 class="ml-1 ml-md-4">
                <span class="item" style="display: flex; justify-content: space-between; width: 100%;">
                  <span>{{ content.area }}</span>
                  {% if content.gpa %}<span style="text-align: center;">GPA: {{ content.gpa }}</span>{% endif %}
                </span>
              </h6>

              {% if content.advisor %}
                <h6 class="ml-1 ml-md-4"><span class="item">
                  Advisor:
                  {% if content.advisor_url %}
                    <a href="{{ content.advisor_url }}" target="_blank">{{ content.advisor }}</a>
                  {% else %}
                    {{ content.advisor }}
                  {% endif %}
                </span></h6>
              {% endif %}

              <ul class="items">
                {% for item in content.courses %}
                  <li><span class="item">{{ item }}</span></li>
                {% endfor %}
              </ul>
            </div>

            <div class="col-2 d-flex justify-content-center align-items-start">
              {% if content.logo %}
                <img
                  src="{{ 'assets/img/' | append: content.logo | relative_url }}"
                  alt="{{ content.institution }}"
                  style="max-height: 75px;"
                >
              {% endif %}
            </div>
          </div>

          {% if content.lab %}
            <div class="row">
              <div class="col-12">
                <h6 class="ml-1 ml-md-4">
                  <span class="item">
                    {% if content.lab_url %}
                      <a href="{{ content.lab_url }}" target="_blank">{{ content.lab }}</a>
                    {% else %}
                      {{ content.lab }}
                    {% endif %}
                  </span>
                </h6>
              </div>
            </div>
          {% endif %}

          {% if content.thesis %}
            <div class="row">
              <div class="col-12">
                <h6 class="ml-1 ml-md-4">
                  <span class="item">
                    Thesis: {{ content.thesis }}
                  </span>
                </h6>
              </div>
            </div>
          {% endif %}

        </div>
          
      </div>
    </li>
  {% endfor %}
</ul>
