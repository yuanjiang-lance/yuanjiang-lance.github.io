{% assign pubs = site.data.resume.publications %}

<div style="margin-top:-0.4em; margin-bottom:1em; font-size:0.9em; color:#555;">
  <sup>#</sup> indicates equal contribution; <sup>*</sup> indicates corresponding author
</div>

<!-- ===================== -->
<!-- Journal Papers -->
<!-- ===================== -->

<div style="
  margin-top:1.2em;
  margin-bottom:0.6em;
  font-size:1.35em;
  font-weight:200;
">
  Journal Papers
</div>

{% assign j_count = 0 %}

{% for pub in pubs %}
  {% if pub.type == "journal" %}
    {% assign j_count = j_count | plus: 1 %}
    {% assign index = "J" | append: j_count %}

    <div class="publication-entry-paragraph"
         style="display:flex; align-items:flex-start; gap:0.4em;
                line-height:1.35; margin-bottom:0.5em;">

      <!-- index -->
      <div style="flex:0 0 2.2em; text-align:left; font-weight:100;">
        [{{ index }}]
      </div>

      <!-- body -->
      <div style="flex:1; min-width:0; font-weight:100;">
        <span>{% for a in pub.authors %}{% if a.self %}<strong>{{ a.name }}</strong>{% else %}{{ a.name }}{% endif %}{% if a.equal %}<sup>#</sup>{% endif %}{% if a.corresponding %}<sup>*</sup>{% endif %}{% unless forloop.last %}, {% endunless %}{% endfor %}</span>.
        {% if pub.doi %}
          <a href="https://doi.org/{{ pub.doi }}" target="_blank">{{ pub.title }}</a>.
        {% else %}
          {{ pub.title }}.
        {% endif %}
        <em>{{ pub.venue }}</em>{% if pub.volume %}, {{ pub.volume }}{% if pub.issue %}({{ pub.issue }}){% endif %}{% endif %}{% if pub.year %} ({{ pub.year }}){% endif %}{% if pub.pages %} {{ pub.pages }}{% endif %}.
        
        {% if pub.remarks %}
          <div style="margin-top:0.3em; line-height:1.25;">
            {% for r in pub.remarks %}
              <div style="padding-left:2.2em; text-indent:-1.2em;">
                • <span style="text-decoration: underline;">{{ r }}</span>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}
{% endfor %}

<hr style="
  border: none;
  border-top: 1px solid #e5e5e5;
  margin: 1.4em 0 0.8em 0;
">

<!-- ===================== -->
<!-- Conference Proceedings -->
<!-- ===================== -->

<div style="
  margin-top:1.2em;
  margin-bottom:0.6em;
  font-size:1.35em;
  font-weight:200;
">
  Conference Proceedings
</div>

{% assign c_count = 0 %}

{% for pub in pubs %}
  {% if pub.type == "conference" %}
    {% assign c_count = c_count | plus: 1 %}
    {% assign index = "C" | append: c_count %}

    <div class="publication-entry-paragraph"
         style="display:flex; align-items:flex-start; gap:0.4em;
                line-height:1.35; margin-bottom:0.5em;">

      <!-- index -->
      <div style="flex:0 0 2.2em; text-align:left; font-weight:100;">
        [{{ index }}]
      </div>

      <!-- body -->
      <div style="flex:1; min-width:0; font-weight:100;">
        <span>{% for a in pub.authors %}{% if a.self %}<strong>{{ a.name }}</strong>{% else %}{{ a.name }}{% endif %}{% if a.equal %}<sup>#</sup>{% endif %}{% if a.corresponding %}<sup>*</sup>{% endif %}{% unless forloop.last %}, {% endunless %}{% endfor %}</span>.
        {% if pub.doi %}
          <a href="https://doi.org/{{ pub.doi }}" target="_blank">{{ pub.title }}</a>.
        {% else %}
          {{ pub.title }}.
        {% endif %}
        <em>{{ pub.venue }}</em>{% if pub.location %}, {{ pub.location }}{% endif %}{% if pub.date %}. {{ pub.date }}{% endif %}{% if pub.pages %}, {{ pub.pages }}{% endif %}.
        
        {% if pub.remarks %}
          <div style="margin-top:0.3em; line-height:1.25;">
            {% for r in pub.remarks %}
              <div style="padding-left:2.2em; text-indent:-1.2em;">
                • <span style="text-decoration: underline;">{{ r }}</span>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}
{% endfor %}